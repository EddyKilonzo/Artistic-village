<%- include('partials/header') %>
<%- include('partials/nav') %>


<div class="bio">
    <h1><%= username %></h1>
    <img style="width:200px; height: 200px; border-radius: 600px; object-fit: cover; margin-top: 10px;" src="<%= profile.profilePic%>" alt="">
    <p><%= user.email %></p>
    <p><%= profile.service%></p>
    <div><%= profile.bio%></div>
    <span>Pricing: <%= profile.price%></span>
  
    
    
</div>
<div>
    <div>
        <button style="display:flex; background: none; border: none;font-size: 20px;" ><a style="color: red;" href="/add-images">+ ADD IMAGES</a></button>
    </div>
    <div>
        <button style="display:flex; background: none; border: none; font-size: 20px;"><a style="color: rgb(51, 39, 185);" href="/edit-profile">⚙️ EDIT PROFILE</a></button>
    </div>
    
</div>
<hr>
<div class="user-images">
    <%images.forEach(image=>{%> 
        <img style="width: 100%;" src="<%=image.image%>" alt="">
        <p style="color: white;"><%=image.description%></p>
        
    <%})%>
</div>


<%- include('partials/footer') %>