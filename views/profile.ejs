<%- include('partials/header') %>

<nav id="nav2">
    <div class="up" >
        <h1 class="logo"><a href="/">ARTISTIC <span>VILLAGE</span></a></h1>
        <small class="text">ONE STORY AT A TIME</small>
    </div>
    <ul>
        <li class="nav2-link"><a href="/">Home</a></li>
        <li class="nav2-link"><a href="/find-talent">Find-Talent</a></li> 
        <% if(locals.isLoggedIn) { %>
            <li class="nav2-link"><a href="/profile/<%= locals.userID %>">Profile</a></li>
            <li class="nav2-link"><a href="/logout">Logout</a></li>
        <% } else {%>
            <li class="nav2-link"><a href="/login">Log In</a></li>
            <li class="nav2-link"><a href="/signup">Sign Up</a></li>
        <% } %>
    </ul>
    
</nav>
<div id="grid">
    <div class="bio">
        <h1><%= username %></h1>
        <img  src="<%= profile.profilePic%>" alt="">
        <p><%= profile.service%></p>
        <p class="user"><i class="fa-solid fa-location-dot"></i> <%= profile.location%></p>
        <div><%= profile.bio%></div>
        <span>Pricing: <%= profile.price%></span>
        <p>Contact Via:</p>
        <div class="contact" style="margin-top: 20px;" >
            <a href="wa.me/0<%= profile.contact%>"><i class="fa-brands fa-whatsapp whatsapp"></i></a>
            <a href = "mailto: <%= user.email%>"><i class="fa-solid fa-envelope email"></i></a>
            <a href="tel:0<%= profile.contact%>"><i class="fa-solid fa-phone icon call"></i></a>
        </div>
        <div style="margin-top: 20px;">
            <button style="display:flex; background: none; border: none;font-size: 20px;" ><a style="color: red;" href="/add-images">+ ADD IMAGES</a></button>
            <button style="display:flex; background: none; border: none; font-size: 20px;"><a style="color: rgb(51, 39, 185);" href="/edit-profile">⚙️ EDIT PROFILE</a></button>
        </div>
        
    </div>
    <div class="profile">
        <h5>Previous Projects</h5>
        <%images.forEach(image=>{%>
            <div class="user-gallery">
                <img src="<%=image.image%>" alt="">
                <p style="display: flex; flex-direction: column; max-width: 80%;"><%=image.description%></p>
                <form action="/delete-pic/<%= image.id%>" method="post" id="delete-form">
                    <button onclick="alert('DO you want to delete this image')" class="btn-delete" type="submit">Delete</button>
                </form>
            </div>
        <%})%>
    </div>
</div>



<%- include('partials/footer') %>


