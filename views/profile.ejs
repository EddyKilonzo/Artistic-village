<%- include('partials/header') %>
<%- include('partials/nav') %>


<div class="bio">
    <h1><%= username %></h1>
    <img  src="<%= profile.profilePic%>" alt="">
    <p><%= user.email %></p>
    <p><%= profile.service%></p>
    <div><%= profile.bio%></div>
    <span>Pricing: <%= profile.price%></span>
    <div class="contact">
        <a href="//wa.me/<%= profile.contact%>"><i class="fa-brands fa-whatsapp whatsapp"></i></a>
        <a href = "mailto: <%= user.email%>"><i class="fa-solid fa-envelope email"></i></a>
        <a href="tel:0<%= profile.contact%>"><i class="fa-solid fa-phone icon call"></i></a>
    </div>
    
    
</div>
<div>
    <div>
        <button style="display:flex; background: none; border: none;font-size: 20px;" ><a style="color: red;" href="/add-images">+ ADD IMAGES</a></button>
    </div>
    <div>
        <button style="display:flex; background: none; border: none; font-size: 20px;"><a style="color: rgb(51, 39, 185);" href="/edit-profile">⚙️ EDIT PROFILE</a></button>
    </div>
    
</div>
<hr>

<div class="profile">
    <%images.forEach(image=>{%>
        <div class="user-gallery">
            <img src="<%=image.image%>" alt="">
            <p style="display: flex; flex-direction: column;"><%=image.description%></p>
            <form action="/delete-pic/<%= image.id%>" method="post" id="delete-form">
                <button class="btn-delete" type="submit">Delete</button>
            </form>
        </div>
    <%})%>
</div>



<%- include('partials/footer') %>