<%- include('partials/header') %>
<%- include('partials/nav') %>


    <main class=" access-point">
        <form action="/login" method="post">
            <p class="form-text">Log In</p>
            <% if(error) { %>
                <p class="error-message"><%= errorMessage%></p>
                <input class="form-input" type="email" name="email" id="" value="<%= email %>" required>
                <input class="form-input" type="password" name="password" id="" value="<%= password %>" required>
            <% } else { %>
                <label for="">Email:</label>
                <input class="form-input" type="email" name="email" id="" required>
                <label for="">Password:</label>
                <input class="form-input" type="password" name="password" id=""required>
            <% } %>
            <input type="submit" value="Log-in" class="btn">
            <p>Don't have an account? <a href="/signup">Sign Up</a> </p>
        </form>
    </main>
